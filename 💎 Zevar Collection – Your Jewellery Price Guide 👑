<body><h2>üíé Zevar Collection ‚Äì Your Jewellery Price Guideüëë</h2><label>Metal Type:</label> <select id="metalType" onchange="updateMakingCharges()"> <option value="gold">Gold</option> <option value="silver">Silver</option> </select>

<label>Live Rate (per 10 gm in ‚Çπ):</label> <input type="number" id="liveRate" placeholder="Enter current rate for 10 gm" required>

<label>Weight (in grams):</label> <input type="number" id="weight" placeholder="Enter weight" required>

<label>Karat:</label> <select id="karat"> <option value="24">24K (100%)</option> <option value="22">22K (91.6%)</option> <option value="18">18K (75%)</option> <option value="14">14K (58.5%)</option> <option value="15.6">15.6K (650 Silver)</option> </select>

<label>Making Charge per gram:</label>

<div id="makingChargeOptions">
    <input type="radio" name="makingCharge" value="999" checked> ‚Çπ999
    <input type="radio" name="makingCharge" value="799"> ‚Çπ799
</div><label>Making Charge Discount (%):</label> <input type="number" id="discount" placeholder="Enter discount %" required>

<label>GST (%):</label> <input type="number" id="gst" value="3" required>

<button onclick="calculatePrice()">Calculate Price</button>

<div id="result"></div><script>
    function updateMakingCharges() {
        let metalType = document.getElementById("metalType").value;
        let makingChargeDiv = document.getElementById("makingChargeOptions");
        
        if (metalType === "gold") {
            makingChargeDiv.innerHTML = `
                <input type="radio" name="makingCharge" value="999" checked> ‚Çπ999
                <input type="radio" name="makingCharge" value="799"> ‚Çπ799
            `;
        } else {
            makingChargeDiv.innerHTML = `
                <input type="radio" name="makingCharge" value="25" checked> ‚Çπ25
                <input type="radio" name="makingCharge" value="35"> ‚Çπ35
                <input type="radio" name="makingCharge" value="45"> ‚Çπ45
            `;
        }
    }

    function calculatePrice() {
        let metalType = document.getElementById("metalType").value;
        let liveRatePer10gm = parseFloat(document.getElementById("liveRate").value);
        let weight = parseFloat(document.getElementById("weight").value);
        let karat = parseFloat(document.getElementById("karat").value);
        let makingCharge = parseFloat(document.querySelector('input[name="makingCharge"]:checked').value);
        let discount = parseFloat(document.getElementById("discount").value);
        let gst = parseFloat(document.getElementById("gst").value);

        if (isNaN(liveRatePer10gm) || isNaN(weight) || isNaN(gst) || isNaN(discount)) {
            document.getElementById("result").innerHTML = "Please enter all values correctly.";
            return;
        }

        let liveRatePerGram = liveRatePer10gm / 10;
        let purityFactor = (metalType === "gold") ? (karat / 24) : (karat === 15.6 ? 0.65 : 1);
        let basePrice = weight * liveRatePerGram * purityFactor;

        let makingCost = weight * makingCharge;
        let discountAmount = (makingCost * discount) / 100;
        let finalMakingCharge = makingCost - discountAmount;

        let subtotal = basePrice + finalMakingCharge;
        let gstAmount = (subtotal * gst) / 100;
        let finalPrice = subtotal + gstAmount;

        document.getElementById("result").innerHTML = 
            `üìå Base Price: ‚Çπ${basePrice.toFixed(2)}<br>
             üíé Making Charges: ‚Çπ${makingCost.toFixed(2)}<br>
             üîª Discount on Making: ‚Çπ${discountAmount.toFixed(2)}<br>
             ‚öñ GST (${gst}%): ‚Çπ${gstAmount.toFixed(2)}<br>
             üèÜ Final Price: <strong>‚Çπ${finalPrice.toFixed(2)}</strong>`;
    }
</script></body>
</html>
